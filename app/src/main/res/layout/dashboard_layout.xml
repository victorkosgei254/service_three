<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="72sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/counter_text"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Counter"
        android:id="@+id/start_counter"
        app:layout_constraintTop_toBottomOf="@id/counter_text"
        app:layout_constraintLeft_toLeftOf="@id/counter_text"
        app:layout_constraintRight_toRightOf="@id/counter_text"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Counter"
        android:id="@+id/stop_counter"
        app:layout_constraintTop_toBottomOf="@id/start_counter"
        app:layout_constraintLeft_toLeftOf="@id/counter_text"
        app:layout_constraintRight_toRightOf="@id/counter_text"
        />

</androidx.constraintlayout.widget.ConstraintLayout>